<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="cardId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/card_id" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_url" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="imgUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/img_url"
            android:textAlignment="center" android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/card_id"
            app:layout_constraintEnd_toStartOf="@+id/uncovered" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="unCovered"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/uncovered"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/img_url"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>